{
  "chapter": "Surface Areas and Volumes",
  "concepts": [
    {
      "id": "cuboid_volume",
      "type": "numeric",
      "question": "Find volume of cuboid with l = 5 cm, b = 4 cm, h = 3 cm",
      "correct_answer": "Volume = l×b×h = 5×4×3 = 60 cm³"
    },


    {
      "id": "cuboid_sa",
      "type": "numeric",
      "question": "Surface area of the above cuboid",
      "correct_answer": "SA = 2(lb+bh+hl) = 2(20+12+15) = 94 cm²"
    },


    {
      "id": "cube_volume",
      "type": "numeric",
      "question": "Volume of cube with side 6 cm",
      "correct_answer": "V = 6^3 = 216 cm³"
    },


    {
      "id": "cube_sa",
      "type": "numeric",
      "question": "Surface area of cube with side 6 cm",
      "correct_answer": "SA = 6a^2 = 6×36 = 216 cm²"
    },


    {
      "id": "cylinder_volume",
      "type": "numeric",
      "question": "Volume of cylinder with r = 7 cm, h = 10 cm (π = 22/7)?",
      "correct_answer": "V = πr^2h = 22/7 × 49 ×10 = 1540 cm³"
    },


    {
      "id": "cylinder_sa",
      "type": "numeric",
      "question": "Surface area of same cylinder",
      "correct_answer": "SA = 2πr(h+r) = 2×22/7 × 7 × (10+7) = 748 cm²"
    },


    {
      "id": "cone_volume",
      "type": "numeric",
      "question": "Volume of cone with r = 3 cm, h = 4 cm (π=3.14)?",
      "correct_answer": "V = 1/3 π r^2 h = 1/3 × 3.14 × 9 ×4 ≈ 37.68 cm³"
    },


    {
      "id": "sphere_volume",
      "type": "numeric",
      "question": "Volume of sphere with r = 5 cm",
      "correct_answer": "V = 4/3 π r^3 = 4/3 × 3.14 ×125 ≈ 523.33 cm³"
    },


    {
      "id": "hemisphere_sa",
      "type": "numeric",
      "question": "Surface area of hemisphere with r = 7 cm",
      "correct_answer": "SA = 3πr^2 = 3 × 3.14 × 49 ≈ 461.58 cm²"
    }
  ]
}
